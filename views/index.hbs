<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
    <a class="navbar-brand" href="#">Umbrella</a>
    <form action="/" method="GET" class="form-inline">
        <input name="city" placeholder="Enter a city name" type="text" class="form-control mr-sm-2" required>
        <button type="submit" class="btn btn my-2 my-sm-0">Get Forecast</button>
    </form>

</nav>
{{!-- <div class="flex-container"> 
